# $Id$

# Meta-makefile("APP" project)
#################################

REQUIRES = objects algo

LIB_PROJ = blast_app_util

APP_PROJ = \
blastp \
blastn \
blastx \
tblastn \
tblastx \
psiblast \
rpsblast \
rpstblastn \
blast_formatter \
deltablast \
seedtop

USR_PROJ = legacy_blast update_blastdb

srcdir = @srcdir@
include @builddir@/Makefile.meta

.PHONY: all $(APP_PROJ)

lib:
	make -f Makefile.blast_app_util_lib
blastn: lib
	make -f Makefile.blastn_app
blastp: lib
	make -f Makefile.blastp_app
blastx: lib
	make -f Makefile.blastx_app
tblastn: lib
	make -f Makefile.tblastn_app
tblastx: lib
	make -f Makefile.tblastx_app
psiblast: lib
	make -f Makefile.psiblast_app
rpsblast: lib
	make -f Makefile.rpsblast_app
rpstblastn: lib
	make -f Makefile.rpstblastn_app
igblastn: lib
	make -f Makefile.igblastn_app
igblastp: lib
	make -f Makefile.igblastp_app
blast_formatter: lib
	make -f Makefile.blast_formatter_app
rmblastn: lib
	make -f Makefile.rmblastn_app
seedtop: lib
	make -f Makefile.seedtop_app
deltablast: lib
	make -f Makefile.deltablast_app

