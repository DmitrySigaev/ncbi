#################################
#
# This template must be "configure"d and included in the very beginning
# of all underlying configurable NCBI project makefiles exactly this way:
#
# srcdir = @srcdir@
# include @builddir@/Makefile.mk
#
#################################


### Make sure we are using a right command shell

@make_shell@


### Configurable directories

exec_prefix = @exec_prefix@
top_srcdir  = @top_srcdir@
includedir  = @includedir@
incdir      = @incdir@
libdir      = @libdir@
bindir      = @bindir@

STD_INCLUDE = -I$(incdir) -I$(srcdir) -I$(includedir) 


### Auxiliary commands

RM    = rm
RMDIR = rm -r
COPY  = cp -p
COPY_IF = @builddir@/if_diff.sh "cp -p"


### Configurable compiler/librarian/linker binaries and options
### (ORIG-Set:  not to be alternated!)

ORIG_CC     = @CC@
ORIG_CXX    = @CXX@
ORIG_CPP    = @CPP@
ORIG_CXXCPP = @CXXCPP@
ORIG_AR     = @AR@
ORIG_RANLIB = @RANLIB@
ORIG_LINK   = @CXX@

ORIG_CFLAGS   = @CFLAGS@
ORIG_CXXFLAGS = @CXXFLAGS@
ORIG_CPPFLAGS = @CPPFLAGS@ $(STD_INCLUDE)
ORIG_LDFLAGS  = @LDFLAGS@
ORIG_LIBS     = @LIBS@ 


### Configurable compiler/librarian/linker binaries and options
### (WORK-Set:  to be used by standard build rules;
###             can be modified to meet a particular project requirements)

CC     = @CC@
CXX    = @CXX@
CPP    = @CPP@
CXXCPP = @CXXCPP@
AR     = @AR@
RANLIB = @RANLIB@
LINK   = @CXX@

CFLAGS   = @CFLAGS@
CXXFLAGS = @CXXFLAGS@
CPPFLAGS = @CPPFLAGS@ $(STD_INCLUDE)
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@ 


### Do not use any default suffix rules
.SUFFIXES:

### Use automatic auto-dependencies(SunOS make, .KEEP_STATE:)
@KeepStateTarget@


#################################
# Optional variables that may be needed to build some projects
#

# Path to PubMed sources (/net/neptune/pubmed/Cvs)
PM_SRC_PATH = @PM_SRC_PATH@
# Path to precompiled PubMed libs(???)
PM_LIB_PATH = @PM_LIB_PATH@

# Path to the NCBI C toolkit headers (/netopt/ncbi_tools/ver0.0/ncbi/include)
NCBI_C_INCLUDE = @NCBI_C_INCLUDE@
# Path to precomp. NCBI C toolkit libs(/netopt/ncbi_tools/ver0.0/ncbi/altlib)
NCBI_C_LIB_PATH = @NCBI_C_LIB_PATH@


#################################
